<div class="col-sm-12">

    <h4>Organizer's name</h4>
    <input type="text" class="form-control organizer_info" autocomplete="off" placeholder="ex: John Smith" data-id="organizer_name" />

    <h4>Organizer's phone number</h4>
    <input type="text" class="form-control organizer_info" autocomplete="off" placeholder="ex: John Smith" data-id="organizer_phone" />

    <h4>Organizer's email address</h4>
    <input type="text" class="form-control organizer_info" autocomplete="off" placeholder="ex: john@example.com" data-id="organizer_email" />

    <h5>Full legal name of other guests</h5>

    <div id="other_guests">
        <div class="input-group">
            <span class="input-group-addon">2</span>
            <input type="text" class="form-control organizer_info" autocomplete="off" />
        </div>
    </div>

</div>
